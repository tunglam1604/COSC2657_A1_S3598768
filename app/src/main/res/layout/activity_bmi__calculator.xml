<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tunglam.yourhealthmate.BMI_Calculator">

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMI CALCULATOR"
        android:textColor="#D50000"
        android:textSize="30sp"
        android:layout_marginTop="25dp" />

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/title1"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Your Health Now With BMI Calculator !"
        android:layout_marginTop="88dp"
        app:layout_constraintHorizontal_bias="0.52" />

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/WTitle"
        android:textColor="#1A237E"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WEIGHT (KG)"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/title1"/>

    <EditText

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/Weight"
        android:textColor="#FF6D00"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/WTitle"
        android:layout_marginTop="17dp"
        app:layout_constraintHorizontal_bias="0.502" />

    <TextView

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#1A237E"
        android:textSize="18sp"
        android:id="@+id/HTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HEIGHT (CM)"
        app:layout_constraintTop_toBottomOf="@+id/Weight"
        android:layout_marginTop="24dp"
        app:layout_constraintHorizontal_bias="0.501" />

    <EditText

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/Height"
        android:textColor="#FF6D00"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/HTitle"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.502" />

    <Button

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/calc"
        android:background="#76FF03"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textStyle="bold"
        android:text="   Calculate BMI   "
        android:onClick="calculateBMI"
        app:layout_constraintTop_toBottomOf="@+id/Height"
        android:layout_marginTop="23dp" />

    <TextView

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/result"
        android:textColor="#D50000"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/calc"
        tools:layout_editor_absoluteX="163dp"
        android:layout_marginTop="25dp" />
</android.support.constraint.ConstraintLayout>
